{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="">
        <div class="min-w-full min-h-screen bg-green95 card card-tertiary flex justify-center items-center">
        {{ form_start(registrationForm) }}
            <form>
                <div class="mb-4 mb-md-5">
                    <h6 class="text-gray">Register</h6>
                </div>
                <div class="form-group flex flex-col align-items-center justify-content-between my-6">
                    <label for="username" class="mr-3 text-center">Email :</label>
                    {{ form_widget(registrationForm.email, { 'attr' : {'label': 'Email', 'class': ''}}) }}
                </div>
                <div
                class="form-group has-success flex flex-col  align-items-center justify-content-between my-6"
                >
                    <label for="password" class="mr-3 text-center">Password :</label>
                    {{ form_widget(registrationForm.plainPassword, { 'attr' : {'label': 'Password', 'class': ''}}) }}
                </div>
                <div
                class="form-group has-success flex flex-row  align-items-center justify-content-between my-6"
                >
                    {{ form_widget(registrationForm.agreeTerms, { 'attr' : {'label': 'Accept', 'class': 'text-white'}}) }}
                    <label for="registration_form_agreeTerms" class="text-white flex justify-center  py-4">Confirmer</label>
                </div>
                <div class="flex justify-center">
                    <div class="d-flex">
                        <button class="btn btn-sm mr-3 btn-primary border-dark" type="submit">
                            <span class="btn-text">Register</span>
                        </button>
                </div>
                {# If you want to control the URL the user is redirected to on success #}
                <input type="hidden" name="_target_path" value="/profil"> 
                {{ form_errors(registrationForm) }}
                {{ form_end(registrationForm) }}
            </form>
        </div>
    </section>
{% endblock %}
