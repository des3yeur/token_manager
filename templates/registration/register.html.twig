{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="bg-green95">
        <div class="min-h-screen min-w-screen flex justify-center items-center ">
            <div class="w-96 card card-tertiary">
                {{ form_start(registrationForm) }}
                <form>
                    <div class="card-header">
                        <h6 class="uppercase font-bold text-lg">Register</h6>
                    </div>
                    <div class"card-body">
                        <div class="form-group flex flex-col align-items-center justify-content-between my-6">
                            <label for="username" class="card-text">Email :</label>
                            {{ form_widget(registrationForm.email, { 'attr' : {'label': 'Email', 'class': ''}}) }}
                        </div>
                        <div class="form-group has-success flex flex-col  align-items-center justify-content-between my-6">
                            <label for="password" class="card-text">Password :</label>
                            {{ form_widget(registrationForm.plainPassword, { 'attr' : {'label': 'Password', 'class': ''}}) }}
                        </div>
                        <div class="form-group has-success flex flex-row  align-items-center justify-content-between my-6">
                            {{ form_widget(registrationForm.agreeTerms, { 'attr' : {'label': 'Accept', 'class': 'text-white'}}) }}
                            <label for="registration_form_agreeTerms" class="card-text">Confirmer</label>
                        </div>
                        <div class="flex justify-center mb-1">
                            <div class="d-flex">
                                <button class="btn btn-xs btn-primary border-dark " type="submit">
                                    <span class="btn-text">Register</span>
                                </button>
                            </div>
                        </div>
                    </div>
                {# If you want to control the URL the user is redirected to on success #}
                <input type="hidden" name="_target_path" value="/profil"> 
                {{ form_errors(registrationForm) }}
                {{ form_end(registrationForm) }}
                </form>
            </div>
        </div>
    </section>
{% endblock %}
